  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
  },
  "include": ["src/**/*.ts","src/types/**/*.d.ts"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}

